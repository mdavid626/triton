# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.require_version ">= 1.6.2"

Vagrant.configure("2") do |config|

    config.vm.define "nestor" do |server|
	    server.vm.hostname = "nestor"
	    server.vm.box = "windows_2012_r2"
		server.vm.communicator = "winrm"
		
		# Admin user name and password
        server.winrm.username = "vagrant"
        server.winrm.password = "vagrant"
		
		server.windows.halt_timeout = 15
		server.vm.guest = :windows
		
		server.vm.network :forwarded_port, guest: 5985, host: 50101, id: "winrm"
		server.vm.network "private_network", ip: "192.168.50.4"
		
		server.vm.provider :virtualbox do |v, override|
			#v.gui = true
			v.name = "nestor"
			v.customize ["modifyvm", :id, "--memory", 4096]
			v.customize ["modifyvm", :id, "--cpus", 2]
			v.customize ["setextradata", "global", "GUI/SuppressMessages", "all" ]
		end
    end
  
    config.vm.define "apollo" do |server|
	    server.vm.hostname = "apollo"
	    server.vm.box = "windows_2012_r2"
		server.vm.communicator = "winrm"
		
		# Admin user name and password
        server.winrm.username = "vagrant"
        server.winrm.password = "vagrant"
		
		server.windows.halt_timeout = 15
		server.vm.guest = :windows
		
		server.vm.network :forwarded_port, guest: 5985, host: 50102, id: "winrm"
		server.vm.network "private_network", ip: "192.168.50.5"
		
		server.vm.provider :virtualbox do |v, override|
			#v.gui = true
			v.name = "apollo"
			v.customize ["modifyvm", :id, "--memory", 4096]
			v.customize ["modifyvm", :id, "--cpus", 2]
			v.customize ["setextradata", "global", "GUI/SuppressMessages", "all" ]
		end
    end
	
	config.vm.define "win10" do |win10|
	    win10.vm.hostname = "win10"
	    win10.vm.box = "windows_10"
		win10.vm.communicator = "winrm"
		
		# Admin user name and password
        win10.winrm.username = "vagrant"
        win10.winrm.password = "vagrant"
		
		win10.windows.halt_timeout = 15
		win10.vm.guest = :windows
		
		win10.vm.network "private_network", ip: "192.168.50.6"
		
		win10.vm.provider :virtualbox do |v, override|
			#v.gui = true
			v.name = "win10"
			v.customize ["modifyvm", :id, "--memory", 2048]
			v.customize ["modifyvm", :id, "--cpus", 2]
			v.customize ["setextradata", "global", "GUI/SuppressMessages", "all" ]
		end

		win10.vm.provision "shell",
			inline: "powershell -NoProfile -Command Enable-NetFirewallRule -DisplayName 'Windows Remote Management (HTTP-In)'"
    end
end
