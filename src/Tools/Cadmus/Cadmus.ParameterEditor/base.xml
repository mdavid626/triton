  <Steps>
    <Step Name="Modules" Title="Modules" IsDefault="true">
      <Operations>
        <RunOperation Title="Deploy" ExecutablePath="powershell" Arguments="-ExecutionPolicy Unrestricted -NoProfile -File run.ps1 deploy" />
        <RunOperation Title="Open Log" ExecutablePath="notepad" Arguments="deploy.log" />
      </Operations>
    </Step>
    <Step Name="Servers" Title="Servers">
    </Step>
    <Step Name="Web" Title="Web">
    </Step>
    <Step Name="Db" Title="Database">
    </Step>
  </Steps>
